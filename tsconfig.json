{
  "compilerOptions": {
    "target": "es2018",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "lib",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
		"module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true
  },
	"include": [
		"src/**/*.ts",
		"src/**/*.json"
	],
  "exclude": [
    "src/index.ts",
    "node_modules",
    "src/_api"
  ]
}